<div class="row" id="main">
    <div class="col-xs-4" id="notDevoured">
        <ol>
            {{#each burgers}} {{#unless this.devoured}}
            <li>
                <form action="/{{this.id}}?_method=PUT" method="POST">
                    {{this.burger_name}}
                    <input type="hidden" name="devoured" value="true">
                    <button type="submit">Eat me</button>
                </form>
            </li>
            {{/unless}} {{/each}}
        </ol>

    </div>
    <div class="col-xs-4" id="center">
        <div class="row" id="picContainer">
            <img src="assets/img/burger.jpg" style="width: 100%; max-height: 350px;"></img>
        </div>
        <h1>Two Burgers One Bun</h1>
        <form action="/" method="POST">
            <div class="row" id="textBoxContainer">
                <textarea id="textBox" name="burger_name"></textarea>
            </div>
            <div class="row" id="btnContainer">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
            <h4>Make a burger and click submit</h4>
        </form>
    </div>
    <div class="col-xs-4" id="devoured">
        <ol>
            {{#each burgers}} {{#if this.devoured}}
            <li>
                {{this.burger_name}} has been eaten
            </li>
            {{/if}} {{/each}}
        </ol>

    </div>

</div>